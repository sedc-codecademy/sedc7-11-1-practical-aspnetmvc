@model OrderViewModel
@{
    ViewData["Title"] = "Order";
}

<h1>Order</h1>

<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <label asp-for="User.FullName"></label>
                <p>@Model.User.FullName</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Id"></label>
                <p>@Model.Id</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Status"></label>
                <p>@Model.Status</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Price"></label>
                <p>@Model.Price $</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Products"></label>
                @if (Model.Products.Count() > 0 && Model.Status == StatusTypeViewModel.Init)
                {
                    <ul>
                        @foreach (var product in Model.Products)
                        {
                            <li>@product.Name : @product.Price $</li>
                        }
                    </ul>
                    <a asp-controller="order" asp-action="changestatus" asp-route-orderId="@Model.Id" asp-route-statusId="1">Proceed</a>
                }
                else
                {
                    <p>Cart is empty!</p>
                }
            </div>
        </div>
    </div>
</div>

